    "arctic": "^3.5.0",
    "drizzle-orm": "^0.44.0",
    "hono": "^4.8.2",
    "isomorphic-git": "^1.28.2",
    "postgres": "^3.4.5",
    "uuid": "^11.0.5",
    "xstate": "^5.19.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.0",
    "@types/uuid": "^10.0.0",
